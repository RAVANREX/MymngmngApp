<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MnyMngApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_app_light_blue_toolbar</item> <!-- Updated to light blue -->
        <item name="colorPrimaryVariant">@color/my_app_primary_dark</item> <!-- Consider a lighter variant for a light blue primary -->
        <item name="colorOnPrimary">@color/black</item> <!-- Changed to black for better contrast on light blue -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_app_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> 
        <item name="colorOnSecondary">@color/black</item> 
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/my_app_light_blue_toolbar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/my_app_light_blue_toolbar</item> <!-- Updated to light blue -->
        <item name="colorPrimaryVariant">@color/my_app_primary_dark</item> <!-- Consider a lighter variant -->
        <item name="colorOnPrimary">@color/black</item> <!-- Changed to black for better contrast on light blue -->
        <item name="colorSecondary">@color/my_app_accent</item>
    </style>
</resources>